<theme>

    <formatVersion>7</formatVersion>

    <view name="system, basic, detailed, video, grid">
	<helpsystem name="help">
	  <fontSize>0 0</fontSize>
	  <pos>0.0 -1</pos>
	  <visible>false</visible>
	</helpsystem>
	</view>
	
	<feature supported="carousel">
	<view name="system">
	<carousel name="systemcarousel">
      <type>horizontal_wheel</type>
      <pos>0 0</pos>
      <size>0 0</size>
      <origin>0 0</origin>
      <color>00000000</color>
      <logoScale>0</logoScale>
      <logoSize>0 0</logoSize>
      <logoRotation>20</logoRotation>
      <logoRotationOrigin>0 0</logoRotationOrigin>
      <logoAlignment>center</logoAlignment>
      <maxLogoCount>0</maxLogoCount>
	</carousel>
	
	<text name="systemInfo">
	  <backgroundColor>00000000</backgroundColor>
      <color>FFFFFF</color>
	  <fontPath>./_inc/fonts/font.ttf</fontPath>
	  <fontSize>0.035</fontSize>
	  <pos>0 0.8</pos>
	</text>
	</view>
	</feature>
	
	<view name="system">
    <video name="background" extra="true">
      <path>./videos/${system.theme}.m4v</path>
      <color>FFFFFF</color>
      <pos>0 0</pos>
      <size>1 1</size>
      <zIndex>11</zIndex>
    </video>
	</view>
	
	<!--Basic View-->
	
    <view name="basic">
    <textlist name="gamelist">
      <selectorColor>fffffff00</selectorColor>
	  <selectedColor>FFFFFF</selectedColor>
	  <primaryColor>000000</primaryColor>
	  <secondaryColor>000066</secondaryColor>
	  <fontPath>./_inc/fonts/font.ttf</fontPath>
	  <pos>0.03 0.1</pos>
	  <size>0.937 0.8</size>
	  <fontSize>0.035</fontSize>
	  <lineSpacing>1.40</lineSpacing>
	  </textlist>
	</view>
	
	<!--Detailed-->
	
	<view name="detailed,video">
	<textlist name="gamelist">
	  <selectorColor>fffffff00</selectorColor>
	  <selectedColor>FFFFFF</selectedColor>
	  <primaryColor>000000</primaryColor>
	  <secondaryColor>000066</secondaryColor>
	  <fontPath>./_inc/fonts/font.ttf</fontPath>
	  <pos>0.39 0.03</pos>
	  <size>0.577 0.9</size>
	  <fontSize>0.035</fontSize>
	  <lineSpacing>1.50</lineSpacing>
	  <horizontalMargin>0.01</horizontalMargin>
	</textlist>
	</view>
	
	<view name="detailed,video,basic,grid">
	<image name="background">
	  <path>./_inc/images/bg_color.png</path>
	  <color>${mainColor}</color>
	  <tile>true</tile>
	</image>
	</view>
	
	<view name="detailed">
	<image name="md_image">
	  <origin>0.5 1</origin>
	  <pos>0.195 0.75</pos>
	  <maxSize>0.325 0.6</maxSize>
	</image>
	</view>
	
	<feature supported="video">
	<view name="video">
	<video name="md_video">
	  <origin>0.5 1</origin>
	  <pos>0.195 0.75</pos>
	  <maxSize>0.325 0.6</maxSize>
	  <delay>1</delay>
	  <showSnapshotNoVideo>true</showSnapshotNoVideo>
	  <showSnapshotDelay>true</showSnapshotDelay>
	</video>
	</view>
	</feature>
	
	<!--Gridview-->
	
    <view name="grid">
	<imagegrid name="gamegrid">
      <pos>0 0</pos>
      <size>1 1</size>
      <margin>0.005 0.010</margin>
      <padding>0.03 0.05 0.03 0.04</padding>
      <autoLayout>3 1</autoLayout>
      <autoLayoutSelectedZoom>1.40</autoLayoutSelectedZoom>
      <animateSelection>false</animateSelection>
      <scrollDirection>horizontal</scrollDirection>
      <centerSelection>true</centerSelection>
      <scrollLoop>true</scrollLoop>
	  <zIndex>2</zIndex>
    </imagegrid>
	
    <gridtile name="default">
      <backgroundColor>FFFFFF00</backgroundColor>
      <backgroundCornerSize>9 9</backgroundCornerSize>
      <selectionMode>image</selectionMode>
      <padding>5 5</padding>
      <imageColor>FFFFFF90</imageColor>
      <reflexion>0.24 0.0</reflexion>
	  <zIndex>2</zIndex>
    </gridtile>
	
    <gridtile name="selected">
      <backgroundColor>FFFFFF00</backgroundColor>
      <imageColor>FFFFFFFF</imageColor>
	  <zIndex>2</zIndex>
    </gridtile>
	
	<text name="md_name">
      <pos>0.0 0.9</pos>
	  <fontPath>./_inc/fonts/font.ttf</fontPath>
      <fontSize>0.04</fontSize>
      <size>1 0.1</size>
	  <forceUppercase>1</forceUppercase>
      <alignment>center</alignment>
	  <zIndex>3</zIndex>
	  <color>FFFFFF</color>
    </text>
	</view>

</theme>

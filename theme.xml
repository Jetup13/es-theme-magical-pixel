<theme>

    <formatVersion>7</formatVersion>
	
    <variables>
	 <fullscreenfixSubsetname>Choose Emulationstation That's In Use</fullscreenfixSubsetname>
   </variables>
   
	<subset name="fullscreenfix" displayName="${fullscreenfixSubsetname}">
        <include name="ES Header" displayName="${ES Header}">./_inc/xml/header.xml</include>
        <include name="ES Fullscreen" displayName="${ES Fullscreen}">./_inc/xml/fullscreen.xml</include>
    </subset>
	
	<feature supported="carousel">
		<view name="system">
		<carousel name="systemcarousel">
          <type>horizontal_wheel</type>
          <pos>0 0</pos>
          <size>1 1</size>
          <origin>0 0</origin>
          <color>00000000</color>
          <logoScale>1.5</logoScale>
          <logoSize>0.25 0.25</logoSize>
          <logoRotation>20</logoRotation>
          <logoRotationOrigin>.5 9</logoRotationOrigin>
          <logoAlignment>center</logoAlignment>
          <maxLogoCount>3</maxLogoCount>
	    </carousel>
			
			<text name="systemInfo">
				<backgroundColor>00000000</backgroundColor>
				<color>FFFFFF</color>
				<fontPath>./_inc/fonts/font.ttf</fontPath>
				<fontSize>0.035</fontSize>
				<pos>0 0.8</pos>
			</text>
		</view>
	</feature>
	
	<view name="system">
    <image name="forground" extra="true">
      <path>./_inc/images/foreground.png</path>
      <color>FFFFFF</color>
      <pos>0 0</pos>
      <size>1 1</size>
      <zIndex>12</zIndex>
    </image>
	
	 <video name="background" extra="true">
      <path>./videos/${system.theme}.m4v</path>
      <color>FFFFFF</color>
      <pos>0 0</pos>
      <size>1 1</size>
      <zIndex>11</zIndex>
    </video>
	</view>

    <view name="system, basic, detailed, video">
		<image name="background_color" extra="true">
			<path>./_inc/images/bg_color.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<color>00000000</color>
		</image>
		
	<image name="logo">
		<path>./art/${system.theme}.png</path>
		<visible>false</visible>
	</image>
		
		<image name="background_pattern" extra="true">
			<path>./_inc/images/bg_pattern.png</path>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
			<color>00000000</color>
			<tile>false</tile>
		</image>
		<image name="background_help" extra="true">
			<path>./_inc/images/bg_color.png</path>
			<origin>0 1</origin>
			<pos>0 1</pos>
			<size>1 0.070</size>
			<color>00000000</color>
		</image>
		<helpsystem name="help">
			<textColor>FFFFFF</textColor>
			<iconColor>FFFFFF</iconColor>
			<fontPath>./_inc/fonts/font.ttf</fontPath>
		</helpsystem>
	</view>
    
	<view name="basic">
		<image name="background_logo" extra="true">
			<path>./_inc/images/bg_color.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 0.16</size>
			<color>6B17DEaa</color>
			<visible>false</visible>
		</image>
		
		<image name="backgroundone" extra="true">
		<path>./_inc/images/background1.png</path>
	    </image>
		
		<image name="logo">
			<origin>0.5 0</origin>
			<pos>0.5 0.02</pos>
			<maxSize>1 0.12</maxSize>
			<visible>false</visible>
		</image>
		<text name="logoText">
			<origin>0.5 0</origin>
			<pos>0.5 0.02</pos>
			<size>1 0.12</size>
			<fontSize>0.12</fontSize>
		</text>
		<image name="gamelist_background" extra="true">
			<path>./_inc/images/bg_color.png</path>
			<origin>0.5 0</origin>
			<pos>0.5 0.18</pos>
			<size>0.96 0.73</size>
			<color>6B17DEaa</color>
			<visible>false</visible>
		</image>
		<textlist name="gamelist">
			<selectorColor>000000</selectorColor>
			<selectedColor>FFFFFF</selectedColor>
			<primaryColor>000000</primaryColor>
			<secondaryColor>000066</secondaryColor>
			<fontPath>./_inc/fonts/font.ttf</fontPath>
			<pos>0.03 0.19</pos>
			<size>0.937 0.69</size>
			<fontSize>0.035</fontSize>
			<lineSpacing>1.40</lineSpacing>
		</textlist>
	</view>
	
	<view name="detailed">
		<image name="md_image">
		<origin>0.5 1</origin>
		<pos>0.195 0.75</pos>
		<maxSize>0.325 0.6</maxSize>
		</image>
	</view>

	<feature supported="video">
		<view name="video">
			<video name="md_video">
				<origin>0.5 1</origin>
				<pos>0.195 0.75</pos>
				<maxSize>0.325 0.6</maxSize>
				<delay>1</delay>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>true</showSnapshotDelay>
			</video>

			<image name="md_marquee">
				<maxSize>0.325 0.260</maxSize>
				<pos>0.195 0.55</pos>
				<origin>0.5 1</origin>
			</image>
		</view>
	</feature>
	
	<feature supported="z-index">
		<view name="video">
				<video name="md_video">
				<zIndex>120</zIndex>
				</video>
				<image name="md_marquee">
				<zIndex>140</zIndex>
				</image>
		</view>
	</feature>

    <view name="detailed,video">
	<image name="background" extra="true">
		<path>./_inc/images/bg_color.png</path>
		<origin>0 0</origin>
		<pos>0.02 0.02</pos>
		<size>0.35 0.89</size>
		<color>6B17DEaa</color>
		<visible>false</visible>
	</image>
	
	<image name="backgroundone" extra="true">
		<path>./_inc/images/background1.png</path>
	</image>

	<image name="gamelist_background" extra="true">
		<path>./_inc/images/bg_color.png</path>
		<origin>0 0</origin>
		<pos>0.38 0.02</pos>
		<size>0.60 0.89</size>
		<color>6B17DEaa</color>
		<visible>false</visible>
	</image>

	<image name="logo">
		<origin>0.5 0</origin>
		<pos>0.195 0.04</pos>
		<maxSize>0.325 0.16</maxSize>
	</image>
	
	<text name="logoText">
		<origin>0.5 0</origin>
		<pos>0.195 0.04</pos>
		<size>0.325 0.16</size>
		<fontSize>0.08</fontSize>
		<lineSpacing>1</lineSpacing>
	</text>
	
	<textlist name="gamelist">
		<selectorColor>000000</selectorColor>
		<selectedColor>FFFFFF</selectedColor>
		<primaryColor>000000</primaryColor>
		<secondaryColor>000066</secondaryColor>
		<fontPath>./_inc/fonts/font.ttf</fontPath>
		<pos>0.39 0.03</pos>
		<size>0.577 0.9</size>
		<fontSize>0.035</fontSize>
		<lineSpacing>1.50</lineSpacing>
		<horizontalMargin>0.01</horizontalMargin>
	</textlist>
	
	<image name="md_hidden">
		<pos>0.085 0.275</pos>
		<path>./_inc/images/hidden.png</path>
		<maxSize>0.06 0.06</maxSize>
	<origin>0.5 1</origin>
	
	</image>
		<image name="md_kidgame">
		<pos>0.195 0.275</pos>
		<path>./_inc/images/child.png</path>
		<maxSize>0.06 0.06</maxSize>
		<origin>0.5 1</origin>
	</image>
	
	<image name="md_favorite">
		<pos>0.305 0.275</pos>
		<path>./_inc/images/star.png</path>
		<maxSize>0.06 0.06</maxSize>
		<origin>0.5 1</origin>
	</image>
	
	<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
		<pos>1 1</pos>
	</text>
	
	<text name="md_rating, md_releasedate, md_developer, md_publisher, md_genre, md_players, md_lastplayed, md_playcount, md_description, md_name">
    <pos>1 1</pos>
	</text>
	
	<rating name="md_rating">
    <pos>1 1</pos>
	</rating>
	
	<datetime name="md_releasedate, md_lastplayed">
    <pos>1 1</pos>
	</datetime> 
	
	</view>

</theme>
